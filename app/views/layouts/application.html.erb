<!DOCTYPE html>
<html>
  <head>
    <title>Shoutout</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript"></script>
    <script src="https://code.jquery.com/jquery-2.2.3.min.js"></script>
    <meta name="viewport" content=width-size=1;"">
    <link href="https://fonts.googleapis.com/css?family=Boogaloo|Didact+Gothic|Passion+One:700" rel="stylesheet">
  </head>

  <body>
    <%= link_to 'Home', root_path %> |
    <% if current_user %>

      <%= "Signed in as #{current_user.name}" %> |

      <%= link_to ' Log Out ', :logout, method: :post %> <br>
      <%= link_to ' My data ', user_path(current_user.id) %> |
      <%= link_to "Add a restaurant", new_restaurant_path %>
      <% if !current_user.owned_restaurants.empty? %>
        | <%= link_to "My restaurants", my_restaurants_path %>
      <% end %>
    <% else %>
      <%= link_to ' Sign Up ', new_user_path %> |
      <%= link_to ' Log In ', new_user_session_path %> |
    <% end %>


    <% if flash.any? %>
      <div class="flash">
        <% flash.each do |k, v| %>
          <%= v %><br>
        <% end %>
      </div>
    <% end %>
    <div class="shell">
      <%= yield %>
    </div>
  </body>
</html>
