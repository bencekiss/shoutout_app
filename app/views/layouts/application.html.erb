<!DOCTYPE html>
<html>
  <head>
    <title>Shoutout</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript"></script>
    <script src="https://code.jquery.com/jquery-2.2.3.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Boogaloo|Didact+Gothic|Passion+One:700" rel="stylesheet">
  </head>

  <body>
    <%# if @do_not_show_header %>
      <% if current_user %>
        <nav>
          <a href="/">
            <div id="logo">
              <i class="fa fa-bullhorn" aria-hidden="true"></i>
            </div>
          </a>
          <%= image_tag current_user.profile_image, id: "avatar" %>
          <!-- <div class="nav-text"> -->
          <!-- <p>Signed in as <%# current_user.name %></p> -->
            | <%= link_to ' Log Out ', :logout, method: :post %>
          <!-- </div> -->
        </nav>
      <% end %>
    <%# end %>
    <div class="dropdown">
      <div class="dropdown-button">
        <i class="fa fa-trophy"></i>
        <small>Rewards</small>
      </div>
      <div class="dropdown-button">
        <i class="fa fa-search"></i>
        <small>Restaurants</small>
      </div>
      <p><%# link_to "View Restaurants", restaurants_path %></p>
      <p><%#  link_to "Add a restaurant", new_restaurant_path %></p>
      <% if current_user %>
        <% if !current_user.owned_restaurants.empty? %>
          <p><%# link_to "My restaurants", my_restaurants_path %></p>
        <% end %>
      <% end %>
    </div>

    <% if flash.any? %>
      <div class="flash">
        <% flash.each do |k, v| %>
          <%= v %><br>
        <% end %>
      </div>
    <% end %>
    <div class="shell">
      <%= yield %>
    </div>
    <footer class="footer">
      <p>&copy PAIR 2017</p>
    </footer>
  </body>
</html>
