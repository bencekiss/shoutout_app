<div class="right-sidebar">
  <% @owned_restaurants.each do |restaurant| %>
    <div class="my-restaurant" id = '<%= restaurant.name.gsub(/\s+/, "") %>'>
        <div class=" animated flipInX" id = '<%= restaurant.name.gsub(/\s+/, "") %>' >
          <h3><%=  restaurant.name %></h3>
          <div class="restaurant-img-container">
            <%= image_tag(restaurant.rest_img.image_resize.url) %>
          </div>
          <div class="restaurant-info-container">
            <h3>Website: <%= link_to "Click me!" , restaurant_path(restaurant) %></h3>
            <h3><%= restaurant.address %></h3>
          </div>
        </div>
    </div>
  <% end %>
</div>
