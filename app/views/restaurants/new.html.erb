<h1>Restaurant Form</h1>

<%= form_for @restaurant do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :rest_image %>
    <%= f.text_field :rest_image %>
  </div>

  <%= render 'rewards' %>
  <%= f.submit %>
<% end %>
