<div class="restaurant-form">
  <h1>Restaurant Form</h1>

  <%= form_for(@restaurant, html: {multipart: true}) do |f| %>

    <div class="field">
      <%= f.label :name %></br>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :address %></br>
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :phone_number %></br>
      <%= f.text_field :phone_number %>
    </div>

    <div class="field">
      <%= f.label :rest_img, value: "Upload your photo here" %></br>
      <%= f.file_field :rest_img %>
    </div>
    <h2>Rewards</h2>

    <%= f.fields_for :rewards do |r| %>
      <%= render 'reward_fields', :f => r %>
    <% end %>

    <div class = "button">
      <%= link_to_add_association 'Add Reward', f, :rewards %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
